# Dockerfile.seed
FROM python:3.11-slim

# Set a working directory
WORKDIR /app

# Install only what we need
RUN pip install pymysql python-dotenv

# Copy your seeder script and .env into the image
COPY populate_stats.py /app/populate_stats.py
COPY api/.env         /app/.env

# Run the seeder on container start
ENTRYPOINT ["python", "/app/populate_stats.py"]
